<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rdshv40.Activity.AddEvent"
    tools:showIn="@layout/app_bar_add_event">

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:id="@+id/eventNameAdd"
                android:layout_gravity="center"
                android:hint="Название"
                android:textColorHint="@color/rdshGray"
                android:textColorHighlight="@color/rdshDarkBlue"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:id="@+id/eventDateAdd"
                android:layout_gravity="center"
                android:hint="Дата (ГГГГ.ММ.ДД)"
                android:textColorHint="@color/rdshGray"
                android:textColorHighlight="@color/rdshDarkBlue"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="270dp"
                android:layout_height="100dp"
                android:id="@+id/eventContentAdd"
                android:layout_gravity="center"
                android:hint="Описание"
                android:textColorHint="@color/rdshGray"
                android:textColorHighlight="@color/rdshDarkBlue"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Проводится в рамках направлений: "
                android:textSize="20dp"
                android:textColor="#222222"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearCheckbox"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addEvent"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@color/rdshRed"
                android:text="  Добавить мероприятие  "
                android:textColor="@color/rdshWhite"/>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
