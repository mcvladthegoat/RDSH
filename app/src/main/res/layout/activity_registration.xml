<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="com.example.rdshv40.Activity.Registration">

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableTool">
        <TableRow>
            <Button
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:id="@+id/authorization"
                android:text="Авторизация"
                android:textColor="@color/rdshGray"
                android:background="@color/rdshWhite"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:id="@+id/registration"
                android:text="Регистрация"
                android:textColor="@color/rdshWhite"
                android:background="@color/rdshBlue" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tableTool"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="300dp"
                android:layout_height="43dp"
                android:id="@+id/lastName"
                android:hint="Фамилия"
                android:textColorHint="@color/rdshGray"
                android:textColorHighlight="@color/rdshDarkBlue"
                android:textSize="20dp"
                android:scrollHorizontally="true"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="43dp"
                android:id="@+id/name"
                android:hint="Имя"
                android:textColorHint="@color/rdshGray"
                android:textColorHighlight="@color/rdshDarkBlue"
                android:textSize="20dp"
                android:scrollHorizontally="true"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="43dp"
                android:id="@+id/email"
                android:hint="E-mail"
                android:textColorHint="@color/rdshGray"
                android:textColorHighlight="@color/rdshDarkBlue"
                android:textSize="20dp"
                android:scrollHorizontally="true"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="43dp"
                android:id="@+id/password"
                android:hint="Пароль"
                android:textColorHint="@color/rdshGray"
                android:textColorHighlight="@color/rdshDarkBlue"
                android:textSize="20dp"
                android:inputType="textPassword"
                android:scrollHorizontally="true"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="43dp"
                android:id="@+id/repeatPassword"
                android:hint="Повторите пароль"
                android:textColorHint="@color/rdshGray"
                android:textColorHighlight="@color/rdshDarkBlue"
                android:textSize="20dp"
                android:inputType="textPassword"
                android:scrollHorizontally="true"/>

            <Spinner
                android:layout_width="300dp"
                android:layout_height="43dp"
                android:id="@+id/role"
                android:entries="@array/roleList"></Spinner>

            <Button
                android:layout_width="300dp"
                android:layout_height="43dp"
                android:id="@+id/enter"
                android:layout_marginTop="15dp"
                android:background="@color/rdshRed"
                android:text="Зарегистрироваться"
                android:textColor="@color/rdshWhite"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
