<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_event_participant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rdshv40.Activity.EventParticipant"
    tools:showIn="@layout/app_bar_event_participant">

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventNameP"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="Название мероприятия"
                android:textColor="@color/rdshDarkdarkBlue"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventDateP"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:text="08.09.79"
                android:textColor="@color/rdshDarkRed"
                android:textAlignment="center"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/listTask"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
